@model OlvidoPasswordViewModel

<div class="container">
	<div class="row">
		
			<div class="card mx-auto">				
				<h2 class="text-center ">Recuperar contraseña</h2>
				<div class="card-body">
					<form asp-controller="Cuentas" asp-action="OlvidoPassword" method="post">
						<div class="mb-3 col-md-6 offset-3">
						<div class=" mb-2">
							<label asp-for="@Model.Email"></label>
							<input asp-for="@Model.Email" class="form-control " placeholder="Correo electronico" >
							<span asp-validation-for="Email"></span>
						</div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block w-100 mx-auto">Recuperar</button>
                        </div>
					</div>
						
					</form>
					
				</div>

			</div>

		
	</div>

</div>