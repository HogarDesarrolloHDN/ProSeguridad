@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}


<div class="card">
    <div class="card-body">
        <h3 class="card-title  text-center ">Registro de usuario</h3>

        <form asp-controller="Cuentas" asp-action="RegistroAdmin" method="post">
            <div asp-validation-summary="All" class=" text-danger"></div>

            <div class=" row mt-4">

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="col-md-2"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Url" class="col-md-2"></label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CodigoPais" class="col-md-2"></label>
                        <input asp-for="CodigoPais" class="form-control" />
                        <span asp-validation-for="CodigoPais" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Pais" class="col-md-2"></label>
                        <input asp-for="Pais" class="form-control" />
                        <span asp-validation-for="Pais" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefono" class="col-md-2"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class=" text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Ciudad" class="col-md-2"></label>
                        <input asp-for="Ciudad" class="form-control" />
                        <span asp-validation-for="Ciudad" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="col-md-2"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaNacimiento" class="col-md-4"></label>
                        <input type="text" name="FechaNacimiento" class="form-control" id="datapicker" placeholder="1995-10-12" />
                        <span asp-validation-for="FechaNacimiento" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-4"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class=" text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="RolSeleccionado" class="col-md-4"></label>
                        <select asp-for="RolSeleccionado" asp-items="@Model.ListaRoles" class="form-control" >

                            <option disabled selected> Seleccione el rol</option>

                        </select>
                        <span asp-validation-for="ConfirmPassword" class=" text-danger"></span>
                    </div>
                </div>

            </div>

            <div class=" row">
                <div class=" col-sm-10 offset-2">
                    <button type="submit" class=" btn btn-success w-50 btn-lg">Registrarse</button>
                </div>
            </div>
        </form>
    </div>

</div>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    <script>
        function() {
            $("#datapicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1930:2022',
                dateFormat; 'yyy-mm-dd'
                    })
        }
    </script>
    @*@await Html.RenderPartialAsync("_ValidationScriptsPartial")*@
    }

