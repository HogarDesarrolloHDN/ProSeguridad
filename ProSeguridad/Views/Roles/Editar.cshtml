@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h3 class="card-title  text-center ">Acceso de usuario</h3>

        <form asp-controller="Roles" asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id"/>
            <div asp-validation-summary="All" class=" text-danger"></div>

            <div class=" row mt-4">
                <div class=" col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="col-md-2"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class=" text-danger"></span>
                    </div>



                </div>
               
            </div>

            <div class=" row">
                <div class=" col-sm-10 offset-2">
                    <button type="submit" class=" btn btn-success w-75 btn-lg">Editar <i class="bi bi-arrw-right-cicle-fill"></i> </button>

                </div>
            </div>
        </form>
    </div>

</div>


