@model ProSeguridad.Models.CambiarPasswordViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager;
@{
    ViewData["Title"] = "cambiar contraseña";
}


<div class="card">
    <div class="card-body">
        <h3 class="card-title  text-center ">Cambiar contraseña</h3>

        <form asp-controller="Usuarios" asp-action="CambiarPassword" method="post">
            <input type="hidden" name="Email" value="@UserManager.GetUserName(User)" />
            <div asp-validation-summary="All" class=" text-danger"></div>

            <div class=" row mt-4">
                <div class=" col-ms-6 offset-3">

                <div class="mb-3">
                    <label asp-for="Password" class="col-md-2"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="col-md-4"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class=" text-danger"></span>
                </div>
                </div>
            </div>

            <div class=" row">
                <div class=" col-sm-10 offset-2">
                    <button type="submit" class=" btn btn-success w-50 btn-lg">Cambiar contraseña</button>
                </div>
            </div>
        </form>
    </div>

</div>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    <script>
        function() {
            $("#datapicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1930:2022',
