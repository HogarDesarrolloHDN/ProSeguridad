@model ProSeguridad.Models.AppUsuario
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-body">
        <h3 class="card-title  text-center ">Editar usuario</h3>

        <form asp-controller="Usuarios" asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class=" text-danger"></div>

            <div class=" row mt-4">
                <div class=" col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email"readonly class="form-control" />
                        <span asp-validation-for="Email" class=" text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdRol" class="col-md-2"></label>
                        <select asp-for="IdRol" asp-items="@Model.ListRol" class="form-control" >
                            <option disabled selected> seleccione el rol</option>
                        </select>
                        <span asp-validation-for="ListRol" class=" text-danger"></span>
                    </div>

                </div>

               
            </div>

            <div class=" form-group mt-4">
               
                    <button type="submit" class=" btn btn-success w-75 btn-lg">Editar <i class="bi bi-arrw-right-cicle-fill"></i> </button>
                    <a asp-action="Index"  class=" btn btn-success w-75 btn-lg">Volver Atras" </a>
             
            </div>
        </form>
    </div>

</div>

